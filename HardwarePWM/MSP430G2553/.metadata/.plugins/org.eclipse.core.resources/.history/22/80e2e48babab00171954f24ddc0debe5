#include <msp430.h>


int Debouncing()
{

   //******GPIO Setup*******//
    P1IE  = BIT3;
    P1IES |= BIT3;
    P1DIR |= BIT0 + BIT3;
    P1OUT |= BIT3;
    P1REN |= BIT3;
    TA0CCTL0  = CCIE;
    P1IFG &= ~BIT3;

    _BIS_SR(LPM0_bits + GIE);
}


#pragma vector=PORT1_VECTOR
__interrupt void Port_1(void)
{
    P1OUT  ^= BIT0;
    TA0CCR0 = 5000;
    P1IE  &= ~BIT3;
    TA0CTL  = TASSEL_1 + MC_1 ;
    P1IFG &= ~BIT3;
}

#pragma vector=TIMER0_A0_VECTOR
__interrupt void Timer_A(void)
{
    P1IE |= BIT3;
    TA0CTL = MC_0;
    TACTL = TACLR;
}
